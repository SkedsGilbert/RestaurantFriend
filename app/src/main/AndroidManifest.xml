<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jobbolster.restaurantfriend" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StarterActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name=".AddRestaurant"
            android:label="@string/title_activity_add_restaurant" >
        </activity>
        <activity
            android:name=".AddLocation"
            android:label="@string/title_activity_add_location" >
        </activity>
        <activity
            android:name=".AddServer"
            android:label="@string/title_activity_add_server" >
        </activity>
    </application>

</manifest>
